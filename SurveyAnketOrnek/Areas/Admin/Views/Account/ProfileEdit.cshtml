@model UserProfilEditDto
@{
    ViewData["Title"] = "Profil Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2 class="text-center">@ViewData["Title"]</h2>

            <form asp-action="ProfileEdit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control"  />
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Surname"></label>
                    <input asp-for="Surname" class="form-control"  />
                </div>

                <div class="form-group mt-3">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control"  />
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control"  />
                </div>

                <br />

                <div class="form-group text-center">
                    <a asp-area="Admin" asp-controller="Account" asp-action="UserList" class="btn btn-outline-danger btn-sm">Geri</a>
                    <button type="submit" class="btn btn-outline-primary btn-sm">Güncelle</button>
                </div>

            </form>
        </div>
    </div>
</div>


