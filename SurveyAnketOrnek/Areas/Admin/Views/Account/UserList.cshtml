@model IEnumerable<UserListDto>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<p>
    <a asp-area="Admin" asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-sm">Kullanıcı Ekle</a>
</p>

<table class="table table-hover table-responsive ">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Surname)</th>
            <th>@Html.DisplayNameFor(model => model.UserName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>Roller</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@string.Join(", ", item.Roles)</td>
                <td>
                    <a asp-action="EditUserRole" asp-route-id="@item.Id">Rol Ata</a> |
                    <a asp-action="Profile" asp-route-id="@item.Id"> Profil</a> |
                    <a asp-action="ProfileEdit" asp-route-id="@item.Id"> Profil Düzenle</a> |
                    <a asp-action="#" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

