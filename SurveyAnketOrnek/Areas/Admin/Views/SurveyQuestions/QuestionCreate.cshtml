@model SurveyQuestion
@{
    ViewData["Title"] = "Soru Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-area="Admin" asp-controller="SurveyQuestions" asp-action="QuestionCreate" method="post">
    
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @* <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger" />
    </div> *@

    @* anket türü dropdown *@
    <div class="form-group mt-3">
        <label asp-for="SurveyType" class="control-label"></label>
        @* <select asp-for="SurveyType" class="form-select" asp-items="ViewBag.PersonType">
        <option value="">Seçiniz</option> <!-- Boş seçenek -->
        </select> *@
        <select asp-for="SurveyType" class="form-control" asp-items="ViewBag.SurveyTypeList">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="SurveyType" class="text-danger"></span>
    </div>

    @* soru içeriği *@
    <div class="form-group mt-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger" />
    </div>

    @* soru tipi dropdown bölümü *@
    <div class="form-group mt-3">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control">
            <option value="text">Metin (text)</option>
            <option value="radiogroup">Seçmeli (radiogroup)</option>
            <option value="checkbox">Çoklu Seçim (checkbox)</option>
            <option value="comment">Çoklu satır</option>
        </select>
        <span asp-validation-for="Type" class="text-danger" />
    </div>

    

    @* seçenekler zorunlu alan değil *@
    <div class="form-group mt-3">
        <label asp-for="ChoicesJson">Seçenekler</label>
        <textarea asp-for="ChoicesJson" class="form-control" placeholder='["Evet", "Hayır"]'></textarea>
        <span asp-validation-for="ChoicesJson" class="text-danger" />
    </div>

    <button type="submit" class="btn btn-outline-primary btn-sm">Ekle</button>
    <a asp-action="QuestionList" class="btn btn-outline-danger btn-sm">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

