@model AppRole
@{
    ViewData["Title"] = "Rol Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-area="Admin" asp-controller="Roles" asp-action="RoleEdit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label class="control-label">Rol Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <a asp-area="Admin" asp-controller="Roles" asp-action="RoleList" class="btn btn-outline-danger btn-sm">İptal</a>
                <input type="submit" value="Güncelle" class="btn btn-outline-info btn-sm" />
            </div>
        </form>
    </div>
</div>

